  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
    integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
    integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
    integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
    crossorigin="anonymous"></script>
</head>

<body>
  <div class="container-fluid">

    <section>
      <!--navbar-->
      <nav class="navbar navbar-expand-lg navbar-light bg-dark text-light">
        <a class="navbar-brand text-light" href="#">Hospital</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
              <a class="nav-link text-light" href="/">Home <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item active">
              <a class="nav-link text-light" href="add/">Appointment<span class="sr-only">(current)</span></a>
            </li>
          </ul>
          <form class="form-inline my-2 my-lg-0">
            <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
          </form>
        </div>
      </nav>
    </section>

    <table class="table table-striped mt-4">

      <thead>
        <tr>
          <form action="" method="">
            <div class="row">
              <div class="col">
                <td colspan="3">
                  First Name
                  <input type="text" class="form-control" name="fisrtname" placeholder="Enter First name" />
                </td>
              </div>
              <div class="col">
                <td colspan="4">
                  Phone
                  <input type="text" class="form-control" name="phone" placeholder="Enter phone" />
                </td>
              </div>
            </div>
            <div class="col">
              <td colspan="3">
                Appointment
                <input type="text" name="appointment" class="form-control" placeholder="Enter Appointment" />
              </td>
            </div>
            <div class="col">
              <td colspan="3">
                City
                <input type="text" class="form-control" placeholder="Enter City" />
              </td>
            </div>
            <div class="col">
              <td>
                <input type="Submit" class="btn btn-outline-success mt-4" value="Search" name="Search" />
              </td>
            </div>
  </div>
  </form>
  </tr>
  </thead>
  <thead>
    <tr>
      <td>
        <a href="/add" class="btn btn-outline-danger">Add</a> <!-- adding hbs form -->

      </td>
    </tr>
  </thead>

  <thead>
    <tr class="bg-warning">
      <th>ID</th>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Email</th>
      <th>Gender</th>
      <th>Phone</th>
      <th>Dob</th>
      <th>AddressLine1</th>
      <th>AddressLine2</th>
      <th>City</th>
      <th>Postal</th>
      <th>Country</th>
      <th>Appointment</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody>
      {{#data}}
    <tr>
       {{!-- <td>{{id}}</td> --}}
      <td>{{firstname}}</td>
      <td>{{lastname}}</td>
      <td>{{email}}</td>
      <td>{{gender}}</td>
      <td>{{phone}}</td>
      <td>{{dob}}</td>
      <td>{{addressline1}}</td>
      <td>{{addressline2}}</td>
      <td>{{city}}</td>
      <td>{{postal}}</td>
      <td>{{country}}</td>
      <td>{{appointment}}</td>
    </tr>
    {{/data}}
  </tbody>


  <tbody>
    <tr>
      <td colspan="2">
        <label class="font-weight-bold">Total Patient : <span class="text-danger">$</span></label>
      </td>
    </tr>
  </tbody>
  </table>

  </div>
</body>

</html>